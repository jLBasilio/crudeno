{
  "files": [
    "index.ts"
  ],
  "quiet": false,
  "debug": true,
  "fullscreen": true,
  "extensions": [
    ".js",
    ".ts",
    ".json"
  ],
  "interval": 500,
  "watch": [
    ".",
    "database/",
    "models/",
    "scripts/"
  ],
  "deno_args":[
    "--allow-net",
    "--allow-read",
    "--allow-env"
  ],
  "execute": {
    ".js": ["deno", "run"],
    ".ts": ["deno", "run"]
  },
  "fmt": false,
  "test": false
}